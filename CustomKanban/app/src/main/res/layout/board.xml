<?xml version="1.0" encoding="utf-8"?>


        <TableLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:stretchColumns="*"
    android:id="@+id/board"
    >

            <TableRow android:layout_weight="4">

                <TextView android:text="Запланрованные"
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:layout_height="fill_parent"
                    android:textStyle="bold"

                    />

                <TextView
                    android:text="В процессе"
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:layout_height="fill_parent"
                    android:textStyle="bold"
                    android:textSize="15dip"
                    android:layout_margin="5dp"/>

                <TextView android:text="Выполненные"
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:layout_height="fill_parent"
                    android:textStyle="bold"
                    android:textSize="15dip"
                    android:layout_margin="5dp"
                    />

                <TextView android:text="Отклоненные"
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:layout_height="fill_parent"
                    android:textStyle="bold"
                    android:textSize="15dip"
                    android:layout_margin="5dp"
                    />

            </TableRow>
            <TableRow
                android:layout_weight="1"
                android:background="#000000"
                />
            <TableRow
                android:layout_weight="30"
                android:background="#236"
                >
                <ListView
                    android:id="@+id/lv_planed"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    />
                <ListView
                    android:id="@+id/lv_inrogress"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    />
                <ListView
                    android:id="@+id/lv_completed"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    />
                <ListView
                    android:id="@+id/lv_canceled"
                    android:layout_height="fill_parent"
                    android:layout_width="0dp"
                    />



            </TableRow>

        </TableLayout>


